---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";

// Import your images
import omniTutorImg from '../assets/omni-tutor.jpg';
import gigCalcImg from '../assets/gig-calc.jpg';


const projects = [
    {
        title: "OmniTutor",
        description: "AI-powered personalized learning platform adapting to individual student needs.",
        image: omniTutorImg,
        href: "https://omni-tutor-ai.vercel.app/", // Add project links
    },
    {
        title: "Gig Milage Calculator",
        description: "A web app to track mileage and expenses for gig economy workers.",
        image: gigCalcImg,
        href: "https://gig-earning-calculator.vercel.app/", // Add project links
    },
    {
        title: "Eliminate Collateral Consequences Campaign",
        description: "Advocacy initiative to reform laws affecting individuals with criminal records.",
        href: "/projects/ecc-campaign", // Add project links
    }
];
---

<InfoLayout>
    <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
        <H1 class="default"> Projects </H1>

        <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-16 sm:gap-8">
            {projects.map((project) => (
                    <li>
                        <a href={project.href} class="group block">
                            {project.image && (
                                    <Image
                                            src={project.image}
                                            alt={project.title}
                                            class="w-full h-48 object-cover rounded-lg transition-transform duration-300 group-hover:scale-105"
                                    />
                            )}
                            <div class="p-1 sm:p-2">
                                <h2 class="text-base text-zinc-100 group-hover:text-white underline decoration-transparent group-hover:decoration-zinc-500 underline-offset-2 transition-all duration-300">
                                    {project.title}
                                </h2>
                                <p class="text-sm text-zinc-400 text-balance">{project.description}</p>
                            </div>
                        </a>
                    </li>
            ))}
        </ul>
    </div>
</InfoLayout>