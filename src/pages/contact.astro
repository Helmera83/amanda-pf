---
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import ExternalLink from "../components/external-link.astro";
import AvailableForWork from "../components/available.astro";
---

<InfoLayout>
    <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh flex flex-col justify-between">

        <div class="space-y-8 sm:space-y-12">
            <div class="space-y-4">
                <H1>Contact</H1>
                <AvailableForWork />
            </div>

            <div class="space-y-6 sm:space-y-8">
                <div>
                    <h2 class="text-xl sm:text-2xl xl:text-3xl text-zinc-300 text-balance font-mono font-medium ">
                        Let's create something remarkable together.
                    </h2>
                    <p class="mt-2 text-base sm:text-lg text-zinc-500">
                        Whether you have a project in mind or just want to chat about design, I'd love to hear from you.
                    </p>
                </div>

                <!-- Primary Contact Methods -->
                <div class="space-y-6">
                    <div class="space-y-2">
                        <h2 class="text-sm tracking-wider text-zinc-600">
                            Email
                        </h2>
                        <ExternalLink href="mailto:helmeramanda90@gmail.com">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-zinc-400">
                                <path fill="currentColor" d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2zm-2 0l-8 5l-8-5zm0 12H4V8l8 5l8-5z"/>
                            </svg>
                            helmeramanda90@gmail.com
                        </ExternalLink>
                    </div>

                    <div class="space-y-2">
                        <h2 class="text-sm tracking-wider text-zinc-600">
                            Phone
                        </h2>
                        <ExternalLink href="tel:+15803607562">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-zinc-400">
                                <path fill="currentColor" d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24c1.12.37 2.33.57 3.57.57c.55 0 1 .45 1 1V20c0 .55-.45 1-1 1c-9.39 0-17-7.61-17-17c0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1c0 1.25.2 2.45.57 3.57c.11.35.03.74-.25 1.02z"/>
                            </svg>
                            +1 (580) 360-7562
                        </ExternalLink>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="pt-6 border-t border-zinc-800">
                    <h2 class="mb-3 text-sm tracking-wider text-zinc-600">
                        Connect
                    </h2>
                    <div class="flex flex-wrap gap-4">
                        <a
                                href="https://www.linkedin.com/in/helmera"
                                target="_blank"
                                class="group flex items-center gap-2 px-4 py-2 rounded-full bg-zinc-800/50 hover:bg-zinc-800 text-zinc-400 hover:text-zinc-100 transition-all duration-300"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                                <path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"/>
                            </svg>
                            LinkedIn
                        </a>

                        <a
                                href="#"
                                target="_blank"
                                class="group flex items-center gap-2 px-4 py-2 rounded-full bg-zinc-800/50 hover:bg-zinc-800 text-zinc-400 hover:text-zinc-100 transition-all duration-300"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                                <path fill="currentColor" d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4zm9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8A1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5a5 5 0 0 1-5 5a5 5 0 0 1-5-5a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3"/>
                            </svg>
                            Instagram
                        </a>

                        <a
                                href="#"
                                target="_blank"
                                class="group flex items-center gap-2 px-4 py-2 rounded-full bg-zinc-800/50 hover:bg-zinc-800 text-zinc-400 hover:text-zinc-100 transition-all duration-300"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                                <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10s10-4.48 10-10S17.52 2 12 2M7.35 18.5C6.66 17.56 6.26 16.38 6.26 15c0-3.22 2.28-5.5 5.5-5.5c3.22 0 5.5 2.28 5.5 5.5c0 1.38-.4 2.56-1.09 3.5c-.91 1.24-2.38 2.01-4.16 2.01c-1.78 0-3.25-.77-4.16-2.01m4.41-3.5c-1.1 0-2 .9-2 2s.9 2 2 2s2-.9 2-2s-.9-2-2-2m0-1c1.66 0 3 1.34 3 3s-1.34 3-3 3s-3-1.34-3-3s1.34-3 3-3"/>
                            </svg>
                            Dribbble
                        </a>
                    </div>
                </div>

                <!-- Response Time -->
                <div class="pt-6 border-t border-zinc-800">
                    <div class="flex items-start gap-3 p-4 rounded-lg bg-zinc-800/30">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="text-zinc-500 flex-shrink-0 mt-0.5">
                            <path fill="currentColor" d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10s10-4.5 10-10S17.5 2 12 2m4.2 14.2L11 13V7h1.5v5.2l4.5 2.7z"/>
                        </svg>
                        <div>
                            <p class="text-sm text-zinc-300 font-medium">
                                Response Time
                            </p>
                            <p class="mt-1 text-sm text-zinc-500">
                                I typically respond within 24 hours during weekdays.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</InfoLayout>