---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large" | "medium";
}

const { size = "default", className } = Astro.props;
---

<h1
        class={clsx(
            "text-zinc-300 font-bold text-balance font-mono",
            size === "default" && "text-4xl md:text-6xl xl:text-8xl tracking-tighter",
            size === "large" && "text-8xl md:text-[120px] lg:text-[160px] tracking-tighter",
            size === "medium" && "text-4xl md:text-8xl lg:text-9xl tracking-tighter",
            className,
        )}
>
    <slot />
</h1>